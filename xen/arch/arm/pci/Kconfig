menu "PCI controller drivers"
	depends on HAS_PCI

config PCIE_XILINX_NWL
	bool "NWL PCIe Core"
	default y
	help
	  Say 'Y' here if you want support for Xilinx NWL PCIe controller.

config PCIE_RCAR_GEN3
	bool "R-Car Gen3 PCIe Core"
	default y
	help
	  Say 'Y' here if you want support for Renesas R-Car Gen3 PCIe controller.

endmenu
